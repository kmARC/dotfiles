#
# wm independent hotkeys
#

# terminal emulator
super + Return
	xfce4-terminal

# program launcher
super + space; super + space
#	dmenu_run
	rofi -combi-modi drun,run,window,ssh -show combi -modi combi,run,ssh,window \
         -sidebar-mode

# show window list
alt + Tab
	rofi -show window -kb-row-down 'Alt-Tab' -kb-accept-entry '!Alt-Tab,Return' \
         -kb-cancel 'Alt-Escape,Escape'


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	~/.xstop; bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# Own customizations
# rotate layout
super + {+,shift +} r
	bspc node @/ -R {90, 270}

ctrl + alt + l
# xscreensaver-command -lock
	light-locker-command -l

XF86Display
	~/bin/desktop.sh

XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioPlay
	mpc toggle

XF86MonBrightness{Up,Down}
	xbacklight -{inc,dec} 5

Print
	flameshot full --path ~/Pictures/Screenshots

shift + Print
	flameshot gui --path ~/Pictures/Screenshots --raw

# Daemons
super + space; M
	~/bin/start-mopidy.sh

super + space; d
	~/bin/desktop.sh

super + space; D
	~/bin/desktop.sh mirror

# Desktop apps
super + space; b
	firefox

super + space; t
	thunar

super + space; s
	skypeforlinux

super + space; v
	virtualbox

super + space; h
	bspc node -o 0.65 && xfce4-terminal -x bash -ci 'home'

super + space; n
	xfce4-terminal -x bash -ci 'notes'

super + space; w
	~/bin/rofi-wifi-menu.sh

super + space; o
	FILE=$(locate -r '^/home/kmarc/.*\..*' |grep -v '/\.' | rofi -dmenu -i) && xdg-open "$FILE"

# Terminal apps
super + space; f
	xfce4-terminal -x bash -ci 'cd ~/Documents/; ranger'

super + space; m
	xfce4-terminal -x bash -ci 'ncmpcpp'

super + space; x
	xfce4-terminal -x bash -ci 'tmux-session'

super + space; e
	splatmoji type
