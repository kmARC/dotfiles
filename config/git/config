[alias]
  stag = tag -s
  graph = log --graph --oneline --all
  mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
  mrg = !sh -c 'git fetch $1 merge-requests/$2/merge:mrg-$1-$2 && git checkout mrg-$1-$2' -

[apply]
  ignorewhitespace = change

[branch]
  sort = -committerdate

[column]
  ui = auto

[core]
  editor = vim

[commit]
  gpgsign = true
	verbose = true

[core]
  pager = delta

[delta]
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  hyperlinks = true
  ; diff-highlight = true


[diff]
  tool = vimdiff
  algorithm = histogram
  mnemonicPrefix = true
  renames = true
  colorMoved = default


[difftool]
  prompt = false
  trustexitcode = true

[fetch]
  recurseSubmodules = on-demand
  prune = true
  pruneTags = true
  writeCommitGraph = true

[gui]
  fontui = -family \"Noto Sans\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Fira Code Medium\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
  tabsize = 4
  spellingdictionary = en_US
  diffopts = --word-diff --patience

[help]
  autocorrect = 10

[init]
  defaultBranch = main

[interactive]
  ; diffFilter = diff-highlight | less
  diffFilter = delta --color-only

[merge]
  tool = vimdiff
  conflictstyle = zdiff3

[mergetool "vimdiff"]
  keepbackup = false
  trustexitcode = true

; [pager]
;   log = diff-highlight | less
;   show = diff-highlight | less
;   diff = diff-highlight | less
; [pager]
;   diff = delta --diff-highlight

[pull]
  rebase = true

[push]
  default = upstream
  gpgSign = if-asked
  autoSetupRemote = true

[rebase]
  autostash = true
  updateRefs = true

[rerere]
  enabled = true
  autoupdate = true

[tag]
  forceSignAnnotated = true
  gpgSign = true

[tig]
  ignore-space = yes
  mouse = true
  main-view = line-number:no,interval=5 id:yes date:relative author:full commit-title:yes,graph,refs,overflow=no

[tig "color"]
  cursor = black cyan
  main-tag = green default bold
  title-blur = black white bold
  title-focus = 12 white

[http]
	version = HTTP/1.1
	emptyAuth = true

[include]
  path = ./config.Linux
  path = ./config.Darwin
  path = ./config.local

[svn]
  logWindowSize = 500000

