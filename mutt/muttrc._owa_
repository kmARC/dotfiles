# Folders
set folder     = ~/.mutt/$from
set spoolfile  = +INBOX
set record     = +Sent
set mbox       = +Archive
set postponed  = +Drafts
set trash      = +Trash

# Sending
set smtp_pass  = "`secret-tool lookup owa-pass $from`"
set smtp_url   = smtp://`secret-tool lookup owa-user $from`:$smtp_pass@localhost:1025/

# Addressbook
set query_command = "~/bin/ldap_owa_query.sh '$from' '$smtp_pass' '%s'"

