setenv from $from

set my_user = "`secret-tool lookup owa-user $from`"
set my_pass = "`secret-tool lookup owa-pass $from`"

# Folders
set folder     = ~/.mutt/$from
set spoolfile  = +INBOX
set record     = +Sent
set mbox       = +Archive
set postponed  = +Drafts
set trash      = +Trash
set signature  = ~/.mutt/sig/sig-$from.txt

# Sending
set smtp_pass  = $my_pass
set smtp_url   = smtp://$my_user:$my_pass@localhost:1025/

# Mailboxes
unmailboxes *
mailboxes `find ~/.mutt/$from/ -type d -name cur -printf '"%h" ' | sort`
exec check-stats

# Addressbook
setenv user $my_user
setenv pass $my_pass
set query_command = "~/bin/ldap_owa_query.sh %s"

# Variable-dependent shortcuts
macro index,pager a "<pipe-message>khard add-email -a $from<return>" "Add sender to addressbook"

