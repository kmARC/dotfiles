# Terminal programs
application/ics;          khal import -a $from %s; needsterminal
text/calendar;            khal import -a $from %s; needsterminal
application/ms-tnef;      tnef -w %s;              needsterminal

# GUI programs
application/*;            mutt-open.sh %s
image/*;                  mutt-open.sh %s
text/*;                   mutt-open.sh %s

# Autoview
application/octet-stream; mutt.octet.filter %s;                     copiousoutput
application/msword;       antiword -w 96 %s 2>/dev/null;            copiousoutput
application/ics;          mutt-ics;                                 copiousoutput
text/calendar;            mutt-ics;                                 copiousoutput
application/pdf;          pdftotext -fixed 8 -l 2 %s - 2>/dev/null; copiousoutput
application/x-pdf;        pdftotext -fixed 8 -l 2 %s - 2>/dev/null; copiousoutput
application/ms-tnef;      tnef -w %s;                               copiousoutput
text/html;                w3m -dump -cols 100 -ppc 10 -graph -s -I %{charset} -T text/html; copiousoutput

# text/html;                elinks -dump -dump-charset %{charset} -dump-width 100 %s; copiousoutput; nametemplate=%s.html
# text/html;                links -dump -width 100 -codepage %{charset} -html-margin 0 -html-tables 1 -html-frames 1 %s; copiousoutput
# text/html;                lynx -dump -width=100 -justify -nonumbers %s; copiousoutput; nametemplate=%s.html
# text/html;                html2text2 -b 100 --ignore-images --ignore-links --ignore-tables %s; copiousoutput; nametemplate=%s.html

