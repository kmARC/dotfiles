include                    ~/.pdotfiles/newsboat/config

always-display-description yes
auto-reload                yes
bookmark-autopilot         yes
bookmark-cmd               "printf '%s\t%s\t%s\t%s\n' >> $HOME/Documents/Notes/bookmarks.txt"
browser                    "xdg-open %u"
download-full-page         yes
feed-sort-order            lastupdated
notify-always              yes
notify-screen              yes
notify-xterm               yes
refresh-on-startup         yes
reload-time                60
text-width                 100
urls-source                inoreader

# Key bindings
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed

# Look and feel
articlelist-format "%4i %f (%4L) %?T?|%-17T|  ?%t  %> %D"

color listnormal        default default
color listnormal_unread black   default bold
color listfocus         white   cyan
color listfocus_unread  white   cyan    bold
color info              default color7
color article           default default

highlight article     "https?://[^ ]+"           color4
highlight article     "\\((link|image)\\)"       color1
highlight article     "^(Link|Date):.*"          color12
highlight article     "^(Feed):.*"               color3
highlight article     "^(Title):.*"              black default bold
highlight article     "^(Author):.*"             color2

highlight feedlist    "^[0-9 ]{4} "              color2
highlight feedlist    "[N ]*\\([0-9/]+\\) "      color12

highlight articlelist "^[0-9 ]{4} "              color2
highlight articlelist "\\(([0-9]{3} |[0-9]\\.[0-9]K|[ 0-9]{2}\\.[0-9])\\) " color12

