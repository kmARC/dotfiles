include                    ~/.pdotfiles/newsboat

always-display-description yes
auto-reload                yes
bookmark-autopilot         yes
bookmark-cmd               "printf '%s\t%s\t%s\t%s\n' >> $HOME/Documents/Notes/bookmarks.txt"
browser                    "xdg-open %u"
download-full-page         yes
feed-sort-order            lastupdated
notify-always              yes
notify-screen              yes
notify-xterm               yes
refresh-on-startup         yes
reload-time                60
text-width                 100
urls-source                inoreader

# Key bindings
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed

# Look and feel
articlelist-format "%4i %f (%4L) %?T?|%-17T|  ?%t  %> %D"

color listnormal        white   default
color listnormal_unread color15 default bold
color listfocus         color18 color14
color listfocus_unread  color0  color14 bold
color info              color8  color18
color article           white   default

highlight article     "https?://[^ ]+"           color4
highlight article     "\\((link|image)\\)"       color1
highlight article     "^(Link|Date):.*"          color8
highlight article     "^(Feed):.*"               color3
highlight article     "^(Title):.*"              color15 default bold
highlight article     "^(Author):.*"             color2

highlight feedlist    "^[0-9 ]{4} "              color2
highlight feedlist    "[N ]*\\([0-9/]+\\) "      color8

highlight articlelist "^[0-9 ]{4} "              color2
highlight articlelist "\\(([0-9 ][0-9. ][0-9.][0-9.K ])\\) " color8

# vim: set ft=conf:
